            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Profile">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
