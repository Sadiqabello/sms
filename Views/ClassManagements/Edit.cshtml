@model ClassManagement

@{
    ViewData["Title"] = "Edit Class Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Edit A Class</h2>

    <!-- Form for editing the class management -->
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="LecturerId" class="form-label">Lecturer Name</label>
            <select class="form-select form-select-lg" asp-for="LecturerId" required>
                <option selected>Select one</option>
                @foreach (var lecturer in ViewBag.Lecturers)
                {
                    <option value="@lecturer.Id" >@lecturer.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Course Name</label>
            <select class="form-select form-select-lg" asp-for="CourseId" required>
                <option selected>Select one</option>
                @foreach (var course in ViewBag.Courses)
                {
                    <option value="@course.Id">@course.CourseTitle</option>
                }
            </select>
        </div>

        <!-- Other form fields go here -->

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "ClassManagements")">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>$(document).ready(function () {
            // Trigger the modal when the page is loaded
            $('#editModal').modal('show');
        });</script>
}
